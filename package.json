{
  "name": "mini-crm-api",
  "version": "1.0.0",
  "description": "This is a mini-crm api, where freelancers can manage their clients and projects.",
  "main": "dist/server.js",
  "scripts": {
    "setup": "./setup.sh",
    "dev": "tsx watch ./src/server.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest --ui",
    "test:run": "vitest --run",
    "compose:up": "docker compose up postgres-test -d",
    "compose:down": "docker compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:update": "pnpm run db:generate && pnpm run db:migrate"
  },
  "keywords": [
    "mini-crm",
    "mini-crm-api",
    "freelancer",
    "roles"
  ],
  "author": "Ashik Sarkar <ashiksarkar.s18@gmail.com>",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "argon2": "^0.41.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "drizzle-zod": "^0.7.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "3.1.2",
    "drizzle-kit": "^0.31.0",
    "supertest": "^7.1.0",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
