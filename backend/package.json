{
  "name": "mini-crm-api",
  "version": "1.0.0",
  "description": "This is a mini-crm api, where freelancers can manage their clients and projects.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "build": "rm -rf ./dist && tsc && tsc-alias",
    "test": "vitest",
    "test:run": "vitest --run",
    "compose:up": "docker compose --env-file ./.env.test up",
    "compose:down": "docker compose down"
  },
  "keywords": [
    "mini-crm",
    "mini-crm-api",
    "freelancer",
    "roles"
  ],
  "author": "Ashik Sarkar <ashiksarkar.s18@gmail.com>",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "supertest": "^7.1.0",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
