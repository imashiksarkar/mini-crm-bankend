{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@lib/*": ["lib/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./src/test",
    "./src/**/__test__",
    "./dist",
    "./node_modules",
    "vite.config.mts",
    "./drizzle.config.ts"
  ]
}
